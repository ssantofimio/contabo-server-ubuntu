<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_assignment_sign" name="Firma de Asignación TIC">
        <t t-call="portal.portal_layout">
            <t t-set="wrap_class" t-value="'o_portal_bg_fill'"/>
            <div class="container mb64">
                <div class="row">
                    <div class="col-12 col-lg-8 offset-lg-2">
                        <div class="card shadow-sm border-0 mt-4">
                            <div class="card-header bg-white border-bottom py-3">
                                <h3 class="mb-0 text-center text-primary">Documento de Entrega de Equipos TIC</h3>
                            </div>
                            <div class="card-body p-4">
                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <strong>Referencia:</strong> <span t-field="assignment.name"/><br/>
                                        <strong>Fecha:</strong> <span t-field="assignment.assignment_date"/><br/>
                                    </div>
                                    <div class="col-md-6">
                                        <strong>Empleado:</strong> <span t-field="assignment.employee_id.name"/><br/>
                                        <strong>Identificación:</strong> <span t-field="assignment.employee_id_number"/>
                                    </div>
                                </div>

                                <h5 class="mt-4 mb-3 border-bottom pb-2">Previsualización del Documento</h5>
                                <div class="bg-light p-2 border rounded" style="height: 500px; overflow: hidden;">
                                    <iframe t-attf-src="/portal-pdf/{{assignment.id}}?access_token={{access_token}}" 
                                            width="100%" height="100%" style="border: none;">
                                    </iframe>
                                </div>

                                <div class="alert alert-info mt-4">
                                    <p class="mb-0 small">Al firmar este documento, usted acepta haber recibido los equipos detallados en el acta arriba mencionada en buen estado y se compromete a cumplir con la política de uso de activos TIC de la empresa.</p>
                                </div>

                                <div class="mt-5 text-center" id="signature_container">
                                    <h5 class="mb-3">Firme a continuación:</h5>
                                    <div class="js_signature_holder border bg-white rounded shadow-sm mb-3" 
                                         style="width: 100%; height: 250px; cursor: crosshair;">
                                        <canvas id="assignment_signature_canvas" style="width: 100%; height: 100%;"></canvas>
                                    </div>
                                    <div class="d-flex justify-content-center gap-2">
                                        <button type="button" class="btn btn-secondary" id="clear_signature">
                                            <i class="fa fa-eraser me-1"/> Limpiar
                                        </button>
                                        <button type="button" class="btn btn-primary" id="save_signature" 
                                                t-att-data-assignment-id="assignment.id" 
                                                t-att-data-access-token="access_token">
                                            <i class="fa fa-pencil-square-o me-1"/> Confirmar Firma
                                        </button>
                                    </div>
                                </div>

                                <div id="signature_success" class="alert alert-success mt-4 d-none">
                                    <h4 class="alert-heading text-center">¡Gracias!</h4>
                                    <p class="mb-0 text-center">El acta ha sido firmada correctamente. Puede cerrar esta ventana.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Scripts para la firma -->
            <script type="text/javascript">
                document.addEventListener('DOMContentLoaded', function() {
                    const canvas = document.getElementById('assignment_signature_canvas');
                    if (!canvas) return;

                    // Ajustar canvas al tamaño del contenedor
                    const ratio = Math.max(window.devicePixelRatio || 1, 1);
                    canvas.width = canvas.offsetWidth * ratio;
                    canvas.height = canvas.offsetHeight * ratio;
                    canvas.getContext("2d").scale(ratio, ratio);

                    const signaturePad = new SignaturePad(canvas, {
                        backgroundColor: 'rgb(255, 255, 255)',
                        penColor: 'rgb(0, 0, 0)'
                    });

                    document.getElementById('clear_signature').addEventListener('click', function() {
                        signaturePad.clear();
                    });

                    document.getElementById('save_signature').addEventListener('click', function() {
                        if (signaturePad.isEmpty()) {
                            alert("Por favor, firme el documento antes de confirmar.");
                            return;
                        }

                        const signature = signaturePad.toDataURL();
                        const btn = this;
                        const assignmentId = btn.getAttribute('data-assignment-id');
                        const accessToken = btn.getAttribute('data-access-token');

                        btn.disabled = true;
                        btn.innerHTML = '<i class="fa fa-spinner fa-spin me-1"/> Procesando...';

                        fetch('/portal-sign-update/' + assignmentId, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'X-CSRF-Token': odoo.csrf_token
                            },
                            body: JSON.stringify({
                                params: {
                                    access_token: accessToken,
                                    signature: signature
                                }
                            })
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.result &amp;&amp; data.result.success) {
                                if (typeof Swal !== 'undefined') {
                                    Swal.fire({
                                        icon: 'success',
                                        title: '¡Documento Firmado!',
                                        text: 'El acta ha sido legalizada exitosamente.',
                                        timer: 1500,
                                        showConfirmButton: false
                                    }).then(() => {
                                        window.location.href = window.location.href;
                                    });
                                } else {
                                    window.location.href = window.location.href;
                                }
                            } else {
                                alert("Error: " + (data.result ? data.result.error : "Error desconocido"));
                                btn.disabled = false;
                                btn.innerHTML = '<i class="fa fa-pencil-square-o me-1"/> Confirmar Firma';
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert("Error de conexión al guardar la firma.");
                            btn.disabled = false;
                            btn.innerHTML = '<i class="fa fa-pencil-square-o me-1"/> Confirmar Firma';
                        });
                    });
                });
            </script>
            <!-- Odoo's signature pad lib if needed or CDN as fallback -->
            <!-- External Libs -->
            <script src="https://cdn.jsdelivr.net/npm/signature_pad@4.0.0/dist/signature_pad.umd.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        </t>
    </template>

    <template id="portal_my_assignment_completed" name="Asignación TIC - Firma Completada">
        <t t-call="portal.portal_layout">
            <div class="container mb64 mt-5">
                <div class="row">
                    <div class="col-12 col-lg-8 offset-lg-2 text-center">
                        <div class="card shadow-lg border-0 rounded-lg">
                            <div class="card-body p-5">
                                <div class="mb-4">
                                    <i class="fa fa-check-circle text-success" style="font-size: 80px;"></i>
                                </div>
                                <h1 class="display-4 fw-bold text-success">¡Firma completada!</h1>
                                <p class="lead mb-4">Tu firma fue un éxito y el documento <strong t-field="assignment.name"/> queda oficialmente firmado.</p>
                                
                                <div class="alert alert-info py-3 mb-4">
                                    <i class="fa fa-envelope me-2"></i> Hemos enviado una copia del documento a tu correo electrónico: 
                                    <strong><span t-field="assignment.employee_email"/></strong>
                                </div>

                                <div class="mt-5">
                                    <a t-attf-href="/portal-pdf/{{assignment.id}}?access_token={{assignment.access_token}}" class="btn btn-primary btn-lg px-5 py-3 shadow">
                                        <i class="fa fa-download me-2"></i> Descargar Documento Firmado
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_assignment_verify" name="Verificador de Autenticidad">
        <t t-call="portal.portal_layout">
            <div class="container mb64 mt-4">
                <div class="bg-white p-4 shadow-sm border rounded">
                    <h3 class="border-bottom pb-2 mb-4">Verificador de Autenticidad</h3>
                    <p class="text-muted small">Última actualización: <span t-field="assignment.write_date"/></p>

                    <div class="row mt-4">
                        <div class="col-md-8">
                            <div class="mb-3 d-flex align-items-center">
                                <strong class="me-2">Status:</strong> 
                                <span class="badge rounded-pill bg-success text-white px-2 py-1 shadow-sm d-inline-flex align-items-center" style="font-size: 11px; letter-spacing: 0.3px; font-weight: 500;">
                                    <i class="fa fa-check-circle me-2" style="font-size: 12px;"></i> Concluido
                                </span>
                            </div>
                            <div class="mb-3">
                                <strong>Token:</strong> <span t-field="assignment.access_token"/>
                            </div>
                            <div class="mb-3">
                                <strong>Documento:</strong> <span t-field="assignment.name"/>
                            </div>
                            <div class="mb-3">
                                <strong>Fecha de creación:</strong> <span t-field="assignment.create_date"/>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="p-3 border rounded bg-light">
                                <img t-att-src="'/report/barcode/?barcode_type=QR&amp;value=' + assignment.portal_verify_url + '&amp;width=180&amp;height=180'" style="width:100%; max-width:180px;"/>
                                <p class="small text-muted mt-2">QR de Seguridad</p>
                            </div>
                        </div>
                    </div>

                    <h4 class="mt-5 border-bottom pb-2">Firmas Realizadas</h4>
                    <div class="list-group border-0 mt-3">
                        <div class="list-group-item p-4 border rounded shadow-sm mb-4" style="border-left: 5px solid #28a745 !important;">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="mb-0 text-success fw-bold">DOCUMENTO DE ENTREGA</h5>
                                <span class="text-muted"><i class="fa fa-shield text-success me-1"></i> Autenticación reconocida</span>
                            </div>
                            <p class="mb-1"><strong>Firmada la entrega por:</strong> <span t-field="assignment.signed_by"/> - <span t-field="assignment.employee_id_number"/></p>
                            <p class="mb-1">Fecha y hora: <span t-field="assignment.signed_on"/></p>
                            <p class="mb-3">IP: <span t-field="assignment.signer_ip"/></p>
                            
                            <div class="bg-light p-2 rounded small text-muted border mb-3">
                                <strong>Hash del Documento (SHA256):</strong> <br/>
                                <code class="small text-break"><span t-field="assignment.document_hash"/></code>
                            </div>

                            <div class="bg-light p-2 rounded small text-muted border mb-3">
                                <strong>Puntos de autenticación:</strong><br/>
                                <i class="fa fa-check text-success me-1"></i> Correo validado: <span t-field="assignment.employee_email"/><br/>
                                <i class="fa fa-check text-success me-1"></i> Navegador: <span t-field="assignment.signer_user_agent"/>
                            </div>

                            <div class="d-flex gap-2">
                                <a t-attf-href="/portal-pdf/{{assignment.id}}?access_token={{assignment.access_token}}&amp;original=1" class="btn btn-sm btn-outline-primary">
                                     <i class="fa fa-file-pdf-o"></i> Descargar Original
                                </a>
                                <a t-attf-href="/portal-pdf/{{assignment.id}}?access_token={{assignment.access_token}}" class="btn btn-sm btn-outline-success">
                                     <i class="fa fa-file-pdf-o"></i> Descargar Firmado
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="portal_my_assignment_return_sign" name="Firma de Devolución TIC">
        <t t-call="portal.portal_layout">
            <t t-set="wrap_class" t-value="'o_portal_bg_fill'"/>
            <div class="container mb64">
                <div class="row">
                    <div class="col-12 col-lg-8 offset-lg-2">
                        <div class="card shadow-sm border-0 mt-4">
                            <div class="card-header bg-dark text-white border-bottom py-3">
                                <h3 class="mb-0 text-center text-white">Acta de Devolución y Paz y Salvo</h3>
                            </div>
                            <div class="card-body p-4">
                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <strong>Referencia Original:</strong> <span t-field="assignment.name"/><br/>
                                        <strong>Fecha Reintegro:</strong> <span t-esc="date_today.strftime('%Y-%m-%d')"/><br/>
                                    </div>
                                    <div class="col-md-6 text-end">
                                        <strong>Empleado:</strong> <span t-field="assignment.employee_id.name"/><br/>
                                        <strong>ID:</strong> <span t-field="assignment.employee_id_number"/>
                                    </div>
                                </div>

                                <h5 class="mt-4 mb-3 border-bottom pb-2">Previsualización de Acta de Devolución</h5>
                                <div class="bg-light p-2 border rounded" style="height: 500px; overflow: hidden;">
                                    <iframe t-attf-src="/portal-pdf-return/{{assignment.id}}?access_token={{access_token}}" 
                                            width="100%" height="100%" style="border: none;">
                                    </iframe>
                                </div>

                                <div class="alert alert-success mt-4 border-success">
                                    <h6 class="alert-heading fw-bold">Certificación de Paz y Salvo</h6>
                                    <p class="mb-0 small">Al firmar este documento, usted formaliza la entrega de los equipos y confirma que se encuentra a Paz y Salvo con la empresa por este concepto. Se anularán automáticamente los compromisos de descuento por pérdida o daño vinculados a esta acta.</p>
                                </div>

                                <div class="mt-5 text-center" id="return_signature_container">
                                    <h5 class="mb-3">Firme el REINTEGRO a continuación:</h5>
                                    <div class="js_signature_holder border bg-white rounded shadow-sm mb-3" 
                                         style="width: 100%; height: 250px; cursor: crosshair;">
                                        <canvas id="return_signature_canvas" style="width: 100%; height: 100%;"></canvas>
                                    </div>
                                    <div class="d-flex justify-content-center gap-2">
                                        <button type="button" class="btn btn-secondary" id="clear_return_signature">
                                            <i class="fa fa-eraser me-1"/> Limpiar
                                        </button>
                                        <button type="button" class="btn btn-success" id="save_return_signature" 
                                                t-att-data-assignment-id="assignment.id" 
                                                t-att-data-access-token="access_token">
                                            <i class="fa fa-check-square-o me-1"/> Formalizar Devolución y Paz y Salvo
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <script type="text/javascript">
                document.addEventListener('DOMContentLoaded', function() {
                    const canvas = document.getElementById('return_signature_canvas');
                    if (!canvas) return;

                    const ratio = Math.max(window.devicePixelRatio || 1, 1);
                    canvas.width = canvas.offsetWidth * ratio;
                    canvas.height = canvas.offsetHeight * ratio;
                    canvas.getContext("2d").scale(ratio, ratio);

                    const signaturePad = new SignaturePad(canvas, {
                        backgroundColor: 'rgb(255, 255, 255)',
                        penColor: 'rgb(0, 0, 0)'
                    });

                    document.getElementById('clear_return_signature').addEventListener('click', function() {
                        signaturePad.clear();
                    });

                    document.getElementById('save_return_signature').addEventListener('click', function() {
                        if (signaturePad.isEmpty()) {
                            alert("Por favor, firme el reintegro para generar el Paz y Salvo.");
                            return;
                        }

                        const signature = signaturePad.toDataURL();
                        const btn = this;
                        const assignmentId = btn.getAttribute('data-assignment-id');
                        const accessToken = btn.getAttribute('data-access-token');

                        btn.disabled = true;
                        btn.innerHTML = '<i class="fa fa-spinner fa-spin me-1"/> Finalizando Ciclo...';

                        fetch('/portal-return-sign-update/' + assignmentId, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'X-CSRF-Token': odoo.csrf_token
                            },
                            body: JSON.stringify({
                                params: {
                                    access_token: accessToken,
                                    signature: signature
                                }
                            })
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.result &amp;&amp; data.result.success) {
                                Swal.fire({
                                    icon: 'success',
                                    title: '¡Ciclo Cerrado!',
                                    text: 'Acta de Devolución Firmada y Paz y Salvo generado.',
                                    timer: 1500,
                                    showConfirmButton: false
                                }).then(() => {
                                    window.location.href = window.location.href;
                                });
                            } else {
                                alert("Error: " + (data.result ? data.result.error : "Error desconocido"));
                                btn.disabled = false;
                                btn.innerHTML = '<i class="fa fa-check-square-o me-1"/> Formalizar Devolución';
                            }
                        });
                    });
                });
            </script>
            <script src="https://cdn.jsdelivr.net/npm/signature_pad@4.0.0/dist/signature_pad.umd.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        </t>
    </template>

    <template id="portal_my_assignment_return_completed" name="Devolución Completada">
        <t t-call="portal.portal_layout">
            <div class="container mb64 mt-5">
                <div class="row">
                    <div class="col-12 col-lg-8 offset-lg-2 text-center">
                        <div class="card shadow-lg border-0 rounded-lg">
                            <div class="card-body p-5">
                                <div class="mb-4">
                                    <i class="fa fa-shield text-success" style="font-size: 80px;"></i>
                                </div>
                                <h1 class="display-4 fw-bold text-success">¡Paz y Salvo Generado!</h1>
                                <p class="lead mb-4">La devolución del documento <strong t-field="assignment.name"/> ha sido procesada con éxito. El equipo ha sido liberado de su custodia.</p>
                                
                                <div class="mt-5">
                                    <a t-attf-href="/portal-pdf-return/{{assignment.id}}?access_token={{assignment.access_token}}" class="btn btn-success btn-lg px-5 py-3 shadow">
                                        <i class="fa fa-download me-2"></i> Descargar Acta de Devolución y Paz y Salvo
                                    </a>
                                </div>
                                <div class="mt-3">
                                    <a t-attf-href="/portal-verify/{{assignment.id}}?access_token={{assignment.access_token}}" class="btn btn-link">
                                        Verificar Trazabilidad del Documento
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_assignment_verify_return" inherit_id="sandor_it_inventory.portal_my_assignment_verify">
        <xpath expr="//div[hasclass('list-group')]" position="inside">
            <t t-if="assignment.state == 'returned' or assignment.return_signature">
                <div class="list-group-item p-4 border rounded shadow-sm mt-3" style="border-left: 5px solid #714B67 !important;">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0 text-primary fw-bold" style="color: #714B67 !important;">DOCUMENTO DE DEVOLUCION - REINTEGRO</h5>
                        <span class="text-muted"><i class="fa fa-shield me-1" style="color: #714B67 !important;"></i> Autenticación reconocida</span>
                    </div>
                    <p class="mb-1"><strong>Firmado el reintegro por:</strong> <span t-field="assignment.return_signed_by"/> - <span t-field="assignment.employee_id_number"/></p>
                    <p class="mb-1">Fecha y hora: <span t-field="assignment.return_signed_on"/></p>
                    <p class="mb-4">IP: <span t-field="assignment.return_signer_ip"/></p>
                    
                    <div class="bg-light p-2 rounded small text-muted border mb-4">
                        <strong>Hash del Documento (SHA256):</strong> <br/>
                        <code class="small text-break"><span t-field="assignment.return_document_hash"/></code>
                    </div>

                    <div class="bg-light p-2 rounded small text-muted border mb-4">
                        <strong>Puntos de autenticación:</strong><br/>
                        <i class="fa fa-check text-success me-1"></i> Correo validado: <span t-field="assignment.employee_email"/><br/>
                        <i class="fa fa-check text-success me-1"></i> Navegador: <span t-field="assignment.return_signer_user_agent"/>
                    </div>

                    <a t-attf-href="/portal-pdf-return/{{assignment.id}}?access_token={{assignment.access_token}}" class="btn btn-sm btn-outline-success">
                         <i class="fa fa-file-pdf-o"></i> Descargar Paz y Salvo
                    </a>
                </div>
            </t>
        </xpath>
        <xpath expr="//span[hasclass('badge')]" position="replace">
             <t t-if="assignment.state == 'returned'">
                <span class="badge rounded-pill bg-primary text-white px-2 py-1 shadow-sm d-inline-flex align-items-center" style="font-size: 11px;">
                    <i class="fa fa-shield me-2"></i> Cerrado y Reintegrado
                </span>
             </t>
             <t t-else="">
                <span class="badge rounded-pill bg-success text-white px-2 py-1 shadow-sm d-inline-flex align-items-center" style="font-size: 11px;">
                    <i class="fa fa-check-circle me-2"></i> Concluido (Asignado)
                </span>
             </t>
        </xpath>
    </template>
</odoo>
