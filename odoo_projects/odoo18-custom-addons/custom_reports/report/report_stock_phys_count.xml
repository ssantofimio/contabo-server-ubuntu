                                        <th style="width: 10%; text-align: right;">Contado</th>
                                        <th style="width: 15%; text-align: right;">Total Valorizado</th>
                                        <th style="width: 10%; text-align: right;">Dif.</th>
                                        <th style="width: 13%; text-align: right;">Valor Dif.</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="group['categories']" t-as="doc">
                                        <tr class="data-row">
                                            <td style="text-align: left;"><t t-esc="doc['category']"/></td>
                                            <td style="text-align: right;"><t t-esc="'{:,.2f}'.format(doc['expected_qty'])"/></td>
                                            <td style="text-align: right;">
                                                <t t-set="val_stock" t-value="doc['expected_qty'] * (doc['total_value'] / doc['counted_qty'] if doc['counted_qty'] else 0)"/>
                                                <span t-esc="val_stock" t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'/>
                                            </td>
                                            <td style="text-align: right;"><t t-esc="'{:,.2f}'.format(doc['counted_qty'])"/></td>
                                            <td style="text-align: right;">
                                                <span t-esc="doc['total_value']" t-options='{"widget": "monetary", "display_currency": res_company.currency_id}'/>
                                            </td>
                                            <td t-attf-style="text-align: right !important; color: {{ '#d9534f' if doc['difference'] &lt; 0 else ('#28a745' if doc['difference'] &gt; 0 else '#333') }}; font-weight: {{ 'bold' if doc['difference'] != 0 else 'normal' }};">
                                                <t t-esc="'{:,.2f}'.format(doc['difference'])"/>
                                            </td>
                                            <td t-attf-style="text-align: right !important; color: {{ '#d9534f' if doc['difference'] &lt; 0 else ('#28a745' if doc['difference'] &gt; 0 else '#333') }}; font-weight: {{ 'bold' if doc['difference'] != 0 else 'normal' }};">
