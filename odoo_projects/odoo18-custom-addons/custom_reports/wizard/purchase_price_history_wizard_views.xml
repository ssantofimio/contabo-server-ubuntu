<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_price_history_wizard_form" model="ir.ui.view">
        <field name="name">purchase.price.history.wizard.form</field>
        <field name="model">purchase.price.history.wizard</field>
        <field name="arch" type="xml">
            <form string="Filtros Histórico de Precios (F-PRO)">
                <group>
                    <group>
                        <field name="warehouse_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="product_categ_ids" widget="many2many_tags" domain="[('id', 'in', allowed_categ_ids)]" options="{'no_create': True, 'no_open': True}"/>
                        <field name="product_ids" widget="many2many_tags" domain="[('id', 'in', allowed_product_ids)]" options="{'no_create': True, 'no_open': True}"/>
                        <field name="partner_ids" widget="many2many_tags" domain="[('id', 'in', allowed_partner_ids)]" options="{'no_create': True, 'no_open': True}"/>
                        
                        <field name="allowed_categ_ids" invisible="1"/>
                        <field name="allowed_product_ids" invisible="1"/>
                        <field name="allowed_partner_ids" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_view_report" string="Ver Histórico" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_price_history_wizard" model="ir.actions.act_window">
        <field name="name">Histórico de Precios (F-PRO)</field>
        <field name="res_model">purchase.price.history.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
