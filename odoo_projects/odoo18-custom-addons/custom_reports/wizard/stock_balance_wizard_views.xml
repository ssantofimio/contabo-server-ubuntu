<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_balance_wizard_form" model="ir.ui.view">
        <field name="name">stock.balance.wizard.form</field>
        <field name="model">stock.balance.wizard</field>
        <field name="arch" type="xml">
            <form string="Balance de Inventario (Kardex)">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                <field name="company_id" invisible="1"/>
                    </group>
                </group>
                <group>
                    <field name="warehouse_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    <field name="category_ids" widget="many2many_tags" options="{'no_create': True}"/>
                </group>
                <footer>
                    <button name="action_generate_report" string="Generar Reporte" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_balance_wizard" model="ir.actions.act_window">
        <field name="name">Balance de Inventario</field>
        <field name="res_model">stock.balance.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
