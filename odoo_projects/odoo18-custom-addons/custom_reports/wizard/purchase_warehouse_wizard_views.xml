<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard View -->
    <record id="view_purchase_warehouse_wizard_form" model="ir.ui.view">
        <field name="name">purchase.warehouse.wizard.form</field>
        <field name="model">purchase.warehouse.wizard</field>
        <field name="arch" type="xml">
            <form string="Filtrar Compras por Producto">
                <field name="company_id" invisible="1"/>
                <group>
                    <group>
                        <field name="date_from"/>
                    </group>
                    <group>
                        <field name="date_to"/>
                    </group>
                </group>
                <group>
                    <field name="warehouse_ids" widget="many2many_tags" options="{'no_create': True}"/>
                </group>
                <footer>
                    <button name="action_generate_report" string="Generar Reporte" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_purchase_warehouse_wizard" model="ir.actions.act_window">
        <field name="name">Asistente Compras por Producto</field>
        <field name="res_model">purchase.warehouse.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
