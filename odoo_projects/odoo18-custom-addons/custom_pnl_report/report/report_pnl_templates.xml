<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_pnl_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center" style="border-bottom: 2px solid black; margin-bottom: 20px;">
                        <h2>ESTADO DE RESULTADOS</h2>
                        <h4 t-esc="company.name"/>
                        <p>
                            Desde: <span t-esc="date_from" t-options='{"widget": "date"}'/> 
                            Hasta: <span t-esc="date_to" t-options='{"widget": "date"}'/>
                        </p>
                    </div>

                    <table class="table table-sm table-reports">
                        <thead>
                            <tr>
                                <th class="text-start" t-att-colspan="2 if comparison != 'none' else 1">Concepto</th>
                                <th class="text-end">Saldo Inicial</th>
                                <th t-if="comparison == 'none'" class="text-end">Débitos</th>
                                <th t-if="comparison == 'none'" class="text-end">Créditos</th>
                                <th class="text-end">Saldo Final</th>
                                <th t-if="comparison != 'none'" class="text-end">Comparación</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="categories" t-as="cat">
                                <tr style="background-color: #f2f2f2; font-weight: bold;">
                                    <td colspan="1" t-esc="cat['name']"/>
                                    <td class="text-end" t-esc="cat['totals']['initial']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                    <td t-if="comparison == 'none'" class="text-end" t-esc="cat['totals']['debit']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                    <td t-if="comparison == 'none'" class="text-end" t-esc="cat['totals']['credit']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                    <td class="text-end" t-esc="cat['totals']['final']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                    <td t-if="comparison != 'none'" class="text-end" t-esc="cat['totals']['comp_final']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                </tr>
                                <t t-foreach="cat['lines']" t-as="line">
                                    <tr>
                                        <td style="padding-left: 20px;">
                                            <span t-esc="line['code']"/> - <span t-esc="line['name']"/>
                                        </td>
                                        <td class="text-end" t-esc="line['initial']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                        <td t-if="comparison == 'none'" class="text-end" t-esc="line['debit']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                        <td t-if="comparison == 'none'" class="text-end" t-esc="line['credit']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                        <td class="text-end" t-esc="line['final']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                        <td t-if="comparison != 'none'" class="text-end" t-esc="line['comp_final']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                    </tr>
                                </t>
                                <tr style="border-top: 1px solid #dee2e6; font-weight: bold;">
                                    <td>Total <t t-esc="cat['name']"/></td>
                                    <td class="text-end" t-esc="cat['totals']['initial']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                    <td t-if="comparison == 'none'" class="text-end" t-esc="cat['totals']['debit']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                    <td t-if="comparison == 'none'" class="text-end" t-esc="cat['totals']['credit']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                    <td class="text-end" t-esc="cat['totals']['final']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                    <td t-if="comparison != 'none'" class="text-end" t-esc="cat['totals']['comp_final']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                </tr>
                                <tr style="height: 10px;"><td colspan="5"></td></tr>
                            </t>

                            <tr style="background-color: #e9ecef; font-weight: bold; border-top: 2px solid #333;">
                                <td>Ganancia (Pérdida) Neta</td>
                                <td class="text-end" t-esc="grand_totals['initial']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                <td t-if="comparison == 'none'" class="text-end" t-esc="grand_totals['debit']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                <td t-if="comparison == 'none'" class="text-end" t-esc="grand_totals['credit']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                <td class="text-end" t-esc="grand_totals['final']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                                <td t-if="comparison != 'none'" class="text-end" t-esc="grand_totals['comp_final']" t-options='{"widget": "monetary", "display_currency": company.currency_id}'/>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row mt-5">
                        <div class="col-4 text-center">
                            <div style="border-top: 1px solid black; padding-top: 5px;">Representante Legal</div>
                        </div>
                        <div class="offset-4 col-4 text-center">
                            <div style="border-top: 1px solid black; padding-top: 5px;">Contador Público</div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
