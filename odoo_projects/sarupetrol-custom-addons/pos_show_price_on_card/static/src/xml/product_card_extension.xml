<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
  <t t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension">
    <xpath expr="//div[hasclass('product-name')]" position="after">
      <div class="price-tag" style="font-size:0.9em; margin-top:4px;">
        <t t-esc="props.displayedPrice || env.utils.formatCurrency(props.product.lst_price)"/>
      </div>
    </xpath>
  </t>
</templates>
