<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_pos_schedule" model="ir.ui.view">
        <field name="name">product.template.form.pos.schedule</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pos_categ_ids']" position="after">
                <field name="pos_weekday_ids" widget="many2many_tags" options="{'no_create': True}" groups="point_of_sale.group_pos_user" invisible="not available_in_pos"/>
                <field name="pos_time_start" widget="float_time" groups="point_of_sale.group_pos_user" invisible="not available_in_pos"/>
                <field name="pos_time_end" widget="float_time" groups="point_of_sale.group_pos_user" invisible="not available_in_pos"/>
            </xpath>
        </field>
    </record>
</odoo>
