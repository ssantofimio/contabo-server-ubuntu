<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_pnl_wizard" model="ir.ui.view">
        <field name="name">account.pnl.wizard.view</field>
        <field name="model">account.pnl.wizard</field>
        <field name="arch" type="xml">
            <form string="Estado de Resultados">
                <group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="target_move" widget="radio"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button name="check_report" string="Imprimir" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_pnl_wizard" model="ir.actions.act_window">
        <field name="name">Estado de Resultados</field>
        <field name="res_model">account.pnl.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
