<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista del Formulario del Wizard -->
    <record id="view_purchase_blancos_wizard_form" model="ir.ui.view">
        <field name="name">purchase.blancos.wizard.form</field>
        <field name="model">purchase.blancos.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Informe de Blancos">
                <field name="company_id" invisible="1"/>
                <group>
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                    <group>
                        <field name="partner_id"/>
                        <field name="warehouse_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <div class="alert alert-info" role="alert">
                    Este informe buscará automáticamente órdenes que cumplan:<br/>
                    • Estado: <b>Orden de Compra</b><br/>
                    • Entrega: <b>Totalmente Recibido</b><br/>
                    • Facturación: <b>Por Facturar</b><br/>
                    • Estado Factura: <b>(Vacío)</b>
                </div>
                <footer>
                    <button name="action_print_report" string="Imprimir PDF" type="object" class="btn-primary"/>
                    <button name="action_print_excel" string="Exportar Excel" type="object" class="btn-success"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción de Ventana con Binding al modelo purchase.order -->
    <record id="action_purchase_blancos_wizard" model="ir.actions.act_window">
        <field name="name">Informe de Blancos</field>
        <field name="res_model">purchase.blancos.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
