<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_available_report_wizard_form" model="ir.ui.view">
        <field name="name">stock.available.report.wizard.form</field>
        <field name="model">stock.available.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte de Existencias">
                <group>
                    <group string="Filtros">
                        <field name="product_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="category_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                    <group string="Dominios">
                        <field name="is_multi_company" invisible="1"/>
                        <field name="company_ids" widget="many2many_tags" 
                               groups="base.group_multi_company" 
                               options="{'no_create': True}"
                               domain="[('id', 'in', allowed_company_ids)]"
                               invisible="not is_multi_company"/>
                        <field name="warehouse_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="cost_method"/>
                    </group>
                </group>
                <footer>
                    <button string="Generar Informe" class="btn-primary" type="object" name="display_report_views"/>
                    <button string="PDF" class="btn-secondary" type="object" name="action_pdf"/>
                    <button string="EXCEL" class="btn-secondary" type="object" name="action_excel"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_available_report_wizard" model="ir.actions.act_window">
        <field name="name">An√°lisis de Existencias</field>
        <field name="res_model">stock.available.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
