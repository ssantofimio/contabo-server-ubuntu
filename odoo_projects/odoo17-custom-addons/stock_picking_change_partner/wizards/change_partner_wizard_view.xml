<odoo>
    <record id="view_change_partner_wizard_form" model="ir.ui.view">
        <field name="name">change.partner.wizard.form</field>
        <field name="model">change.partner.wizard</field>
        <field name="arch" type="xml">
            <form string="Cambiar contacto">
              <p>Seleccione un nuevo contacto para este movimiento de inventario y se actualizar√°.</p>
                <group>
                    <field name="picking_id" readonly="1"/>
                    <field name="partner_id"/>
                </group>
                <footer>
                    <button name="action_confirm" string="Actualizar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_change_partner_wizard" model="ir.actions.act_window">
        <field name="name">Cambiar Contacto</field>
        <field name="res_model">change.partner.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_picking_id': active_id}</field>
    </record>
</odoo>
