<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_odash_pro" model="ir.module.category">
        <field name="name">Odashboard</field>
        <field name="description">Category for Odashboard users</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_odash_pro_viewer" model="res.groups">
        <field name="name">Viewer</field>
        <field name="category_id" ref="module_category_odash_pro"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_odash_pro_editor" model="res.groups">
        <field name="name">Editor</field>
        <field name="category_id" ref="module_category_odash_pro"/>
        <field name="implied_ids"
               eval="[(4, ref('group_odash_pro_viewer'))]"/>
    </record>

    <!-- Héritage automatique: les membres du groupe Paramètres système sont automatiquement éditeurs Odashboard -->
    <record id="base.group_system" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_odash_pro_editor'))]"/>
    </record>

</odoo>
