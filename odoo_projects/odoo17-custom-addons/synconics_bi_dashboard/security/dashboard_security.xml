<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_dashboard" model="ir.module.category">
        <field name="name">BI Dashboard</field>
        <field name="description">Allows you to manage your Dashboard.</field>
        <field name="sequence">1</field>
    </record>

    <record id="group_dashboard_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_category_dashboard"/>
    </record>

    <record id="group_dashboard_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_dashboard"/>
        <field name="implied_ids" eval="[(4, ref('group_dashboard_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <data noupdate="1">
        <record id="dashboard_chart_user_rule" model="ir.rule">
            <field name="name">Dashboard Chart</field>
            <field name="model_id" ref="synconics_bi_dashboard.model_dashboard_chart"/>
            <field name="domain_force">[
'|', '|', '|',
    '&amp;','&amp;',
        ('chart_type', '=', 'to_do'),
        ('todo_layout', '=', 'activity'),
        '|',
        ('model_id', 'in', [model.model_id.id for model in user.groups_id.model_access]),
        ('model_id', 'in', [model.model_id.id for model in user.model_access]),
    '&amp;','&amp;',
        ('chart_type', '=', 'to_do'),
        ('todo_layout', '!=', 'activity'),
        ('model_id', '=', False),
    '&amp;',
        ('chart_type', '!=', 'to_do'),
        '|',
        ('model_id', 'in', [model.model_id.id for model in user.groups_id.model_access]),
        ('model_id', 'in', [model.model_id.id for model in user.model_access]),

    '|',
        '|',
        ('company_id','=',False),
        ('company_id', 'in', company_ids),
        '|', '|',
        ('kpi_model_id','=',False),
        ('kpi_model_id', 'in', [model.model_id.id for model in user.groups_id.model_access]),
        ('kpi_model_id', 'in', [model.model_id.id for model in user.model_access])
]
            </field>
        </record>

        <record id="dashboard_chart_global_multi_company_rule" model="ir.rule">
            <field name="name">Dashboard Chart Global Multi Company</field>
            <field name="model_id" ref="synconics_bi_dashboard.model_dashboard_chart"/>
            <field name="domain_force">['|', ('company_id','=',False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('synconics_bi_dashboard.group_dashboard_manager'))]"/>
        </record>

        <record id="dashboard_user_rule" model="ir.rule">
            <field name="name">Dashboard</field>
            <field name="model_id" ref="synconics_bi_dashboard.model_dashboard_dashboard"/>
            <field name="domain_force">['|', ('user_ids', 'in', user.ids), ('user_ids', '=', False), '|', ('company_id','=',False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('synconics_bi_dashboard.group_dashboard_user'))]"/>
        </record>

        <record id="dashboard_multi_company_rule" model="ir.rule">
            <field name="name">Dashboard Multi Company</field>
            <field name="model_id" ref="synconics_bi_dashboard.model_dashboard_dashboard"/>
            <field name="domain_force">['|', ('company_id','=',False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('synconics_bi_dashboard.group_dashboard_manager'))]"/>
        </record>

    </data>
</odoo>
