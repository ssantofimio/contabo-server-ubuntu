<?xml version="1.0" encoding="utf-8"?>

<templates xml:space="preserve">
    <t t-name="synconics_bi_dashboard.TileView" owl="1">
        <div t-if="this.state.isError" class="w-100 d-flex align-items-center justify-content-center" style="height: 90%;">
            <h5 t-out="this.state.errorMessage"></h5>
        </div>
        <div t-else="" class="col-sm-12 col-md-12 oe_inner" t-att-style="'background-color:' + state.data.background_color +'!important;height: 100%;'">
            <t t-if="state.layout_type === 'layout1'">
                <TileLayoutOne data="state.data" />
            </t>
            <t t-elif="state.layout_type === 'layout2'">
                <TileLayoutTwo data="state.data" />
            </t>
            <t t-elif="state.layout_type === 'layout3'">
                <TileLayoutThree data="state.data" />
            </t>
            <t t-elif="state.layout_type === 'layout4'">
                <TileLayoutFour data="state.data" />
            </t>
        </div>
    </t>
</templates>
