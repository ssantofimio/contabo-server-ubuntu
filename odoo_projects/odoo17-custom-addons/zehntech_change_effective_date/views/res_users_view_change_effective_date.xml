<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<record id="view_users_form_inherit_effective_date" model="ir.ui.view">
    <field name="name">res.users.form.change.effective.date</field>
    <field name="model">res.users</field>
    <field name="inherit_id" ref="base.view_users_form"/>
    <field name="arch" type="xml">
            <xpath expr="//page[@name='access_rights']" position="inside">
                <group>
                    <field name="is_admin_settings" invisible="1"/>
                    <field name="change_effective_date"  invisible="is_admin_settings != True"/>
                </group>
            </xpath>
    </field>
</record>
</odoo>
