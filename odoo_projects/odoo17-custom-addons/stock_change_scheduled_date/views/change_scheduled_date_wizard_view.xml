<odoo>
    <record id="view_change_scheduled_date_wizard_form" model="ir.ui.view">
        <field name="name">change.scheduled.date.wizard.form</field>
        <field name="model">change.scheduled.date.wizard</field>
        <field name="arch" type="xml">
            <form string="Cambiar Fecha Programada">
                <group>
                    <field name="picking_id"/>
                    <field name="new_date"/>
                </group>
                <footer>
                    <button string="Cambiar" type="object" name="change_date" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_change_scheduled_date_wizard" model="ir.actions.act_window">
        <field name="name">Cambiar Fecha Programada</field>
        <field name="res_model">change.scheduled.date.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
