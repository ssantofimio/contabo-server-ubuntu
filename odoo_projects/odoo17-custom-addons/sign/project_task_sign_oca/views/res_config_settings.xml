<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.inherit.project (in project_task_sign_oca)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//app[@name='project']" position="inside">
                <block
                    title="Sign Oca"
                    name="project_task_sign_oca_setting_container"
                    groups="sign_oca.sign_oca_group_admin"
                >
                    <setting
                        help="Define a template to enable automatic sign requests for the task customer"
                    >
                        <field
                            name="project_task_sign_oca_template_id"
                            options="{'no_create': True}"
                        />
                    </setting>
                </block>
            </xpath>
        </field>
    </record>

</odoo>
